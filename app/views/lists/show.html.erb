<p style="color: green"><%= notice %></p>

<h2><%= @list.name %></h2>

<div class="d-flex gap-2">
  <%= link_to "Back to lists", lists_path, class: "btn btn-primary" %>
  <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-warning" %>
</div>

<div class="row"> <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">

      <div class="card h-100"> <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" style="height: 300px; object-fit: cover;">

        <div class="card-body">
          <h5 class="card-title"><strong><%= bookmark.movie.title %></strong></h5>
          <p class="card-text"><%= bookmark.movie.overview.truncate(100) %></p>
          <hr>
          <p class="card-text"><em>"<%= bookmark.comment %>"</em></p>
        </div>
        <div class="card-footer bg-transparent text-end">
          <%= link_to "Apagar",
              bookmark_path(bookmark),
              data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
              class: "text-danger text-decoration-none" %>
        </div>
      </div>

    </div>
  <% end %>
</div>
